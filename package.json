{
  "name": "sistema-cartorio-microservices",
  "version": "1.0.0",
  "description": "Sistema de cartório baseado em microsserviços",
  "main": "index.js",
  "scripts": {
    "install-all": "npm run install:services && npm run install:frontend && npm run install:electron",
    "install:services": "cd services && for dir in */; do (cd \"$dir\" && npm install); done",
    "install:frontend": "cd frontend && npm install",
    "install:electron": "cd electron && npm install",
    "dev:web": "cd frontend && npm run dev",
    "dev:electron": "cd electron && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "cd electron && npm run build",
    "start:electron": "cd electron && npm start",
    "dist:electron": "cd electron && npm run dist",
    "push:quick": "powershell -ExecutionPolicy Bypass -File push-git.ps1",
    "pull:quick": "powershell -ExecutionPolicy Bypass -File pull-git.ps1",
    "scripts:bat": "SCRIPTS-AUTOMATIZADOS.bat",
    "scripts:ps1": "powershell -ExecutionPolicy Bypass -File SCRIPTS-POWERSHELL.ps1"
  },
  "keywords": [
    "cartorio",
    "microservices",
    "nodejs",
    "typescript",
    "react",
    "mysql",
    "xampp"
  ],
  "author": "Sistema Cartório",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "services/*",
    "frontend",
    "shared"
  ],
  "dependencies": {
    "tesseract.js": "^6.0.1"
  }
}
