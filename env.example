# Configurações do Banco de Dados
DATABASE_URL=postgresql://cartorio_user:cartorio_password@localhost:5432/cartorio_db

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Configurações Redis
REDIS_URL=redis://localhost:6379

# Configurações RabbitMQ
RABBITMQ_URL=amqp://cartorio:cartorio_password@localhost:5672

# URLs dos Serviços
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
DOCUMENT_SERVICE_URL=http://localhost:3003
REGISTRY_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006
API_GATEWAY_URL=http://localhost:3000

# Frontend
FRONTEND_URL=http://localhost:3007
REACT_APP_API_URL=http://localhost:3000

# Ambiente
NODE_ENV=development
PORT=3000

# Configurações de Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configurações de Upload de Arquivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log
