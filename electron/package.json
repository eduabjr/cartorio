{
  "name": "civitas-electron",
  "version": "1.0.0",
  "description": "Sistema CIVITAS - Cartório Digital (Versão Desktop)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "cartorio",
    "civitas",
    "scanner",
    "ocr",
    "multifuncional",
    "desktop"
  ],
  "author": "Sistema CIVITAS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-log": "^4.4.8"
  },
  "dependencies": {
    "node-tesseract-ocr": "^2.2.1",
    "sharp": "^0.32.6",
    "wmic": "^0.2.4"
  },
  "build": {
    "appId": "com.civitas.cartorio",
    "productName": "Sistema CIVITAS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "scanner-bridge.js",
      "../frontend/dist/**/*",
      "../scripts/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../scripts",
        "to": "scripts"
      },
      {
        "from": "../frontend/public",
        "to": "public"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "../frontend/public/logo-light.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "../frontend/public/logo-light.png",
      "category": "Office"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "../frontend/public/logo-light.png",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema CIVITAS"
    },
    "publish": {
      "provider": "github",
      "owner": "civitas",
      "repo": "cartorio"
    }
  }
}
